  "bots": [
    {
      "name": "Miyabi Bot",
      "description": "Official Miyabi integration bot",
      "features": [
        "GitHub webhook notifications",
        "Issue/PR status updates",
        "Agent execution monitoring",
        "Deployment notifications",
        "Weekly reports"
      ],
      "commands": [
        "/miyabi-status - Check project status",
        "/miyabi-issue <number> - Get issue details",
        "/miyabi-pr <number> - Get PR details",
        "/miyabi-deploy <env> - Trigger deployment",
        "/miyabi-agent run <agent> - Run specific agent"
      ]
    },
    {
      "name": "MEE6",
      "description": "Leveling and moderation bot",
      "features": [
        "XP and leveling system",
        "Custom commands",
        "Auto-moderation",
        "Welcome messages",
        "Role rewards"
      ]
    },
    {
      "name": "GitHub",
      "description": "Official GitHub bot",
      "features": [
        "Issue/PR notifications",
        "Commit notifications",
        "Release notifications",
        "Rich embeds for GitHub links"
      ]
    }
  ],
  "autoModerationRules": [
    {
      "name": "Anti-Spam",
      "enabled": true,
      "triggerType": "SPAM",
      "actions": [
        "block_message",
        "send_alert_message",
        "timeout_user_60s"
      ]
    },
    {
      "name": "Block Invite Links",
      "enabled": true,
      "triggerType": "KEYWORD",
      "keywords": ["discord.gg/", "discord.com/invite/"],
      "actions": [
        "block_message",
        "send_alert_message"
      ],
      "exemptRoles": ["Moderator", "Admin"]
    },
    {
      "name": "Block Explicit Content",
      "enabled": true,
      "triggerType": "KEYWORD",
      "keywordFilter": "COMMON_PROFANITY",
      "actions": [
        "block_message",
        "send_alert_message"
      ]
    }
  ],
  "welcomeMessage": {
    "enabled": true,
    "channel": "welcome",
    "message": "Welcome to Miyabi Community, {user}! üå∏\n\n‚úÖ Read the rules in <#rules>\n‚úÖ Introduce yourself in <#introductions>\n‚úÖ Check <#faq> for common questions\n‚úÖ Get help in <#support-english> or <#support-japanese>\n\nHappy coding! ü§ñ"
  },
  "integration": {
    "github": {
      "enabled": true,
      "webhooks": [
        {
          "event": "issues",
          "channel": "announcements",
          "filter": "opened"
        },
        {
          "event": "pull_request",
          "channel": "announcements",
          "filter": "opened"
        },
        {
