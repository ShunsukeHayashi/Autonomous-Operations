# Context Engineering API Configuration

# Required: Google Gemini API Key
# Get one free at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# API Server Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT_GUIDES=8888
UVICORN_PORT_CONTEXT=9001
LOG_LEVEL=info

# Context Engineering Settings
CONTEXT_OPTIMIZATION_THRESHOLD=80
CONTEXT_MAX_TOKENS=8192
CONTEXT_AUTO_OPTIMIZE=true

# Template Storage
TEMPLATE_STORAGE_PATH=./templates

# Performance Settings
API_TIMEOUT=30
MAX_CONCURRENT_OPTIMIZATIONS=5
CACHE_ENABLED=true
CACHE_TTL=3600

# Gemini API Settings
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=2048
